    <script>
        function checkLogin(url) {
            fetch('/check-login')
                .then(response => response.json())
                .then(data => {
                    if (data.loggedIn) {
                        window.location.href = url;
                    } else {
                        alert('You need to log in first.');
                        window.location.href = '/';
                    }
                });
        }
    </script>


    <main>
        <section class="container">
            <h1>Sell Your Car</h1>
            <form id="sellCarForm" enctype="multipart/form-data" action="/api/sell-car" method="POST">
                <fieldset>
                    <legend>Basic Information</legend>
                    <label for="model">Model:</label>
                    <input class="input-box" type="text" id="model" name="model" required>
                    <label for="year">Year:</label>
                    <input class="input-box" type="number" id="year" name="year" required>
                    <label for="price">Price:</label>
                    <input class="input-box" type="number" id="price" name="price" required>
                    <label for="mileage">Mileage:</label>
                    <input class="input-box" type="number" id="mileage" name="mileage" required>
                    <label for="HP">Horse Power:</label>
                    <input class="input-box" type="number" id="HP" name="HP" required>
                    <label for="speed">Top Speed:</label>
                    <input class="input-box" type="text" id="speed" name="speed" required>
                    <label for="transmission">Transmission:</label>
                    <input class="input-box" type="text" id="transmission" name="transmission" required>
                    <label for="fuel">Fuel:</label>
                    <input class="input-box" type="text" id="fuel" name="fuel" required>
                    <label for="description">Description:</label>
                    <textarea id="description" name="description" required></textarea>
                </fieldset>
                <fieldset>
                    <legend>Contact Information</legend>
                    <label for="sellerName">Name:</label>
                    <input class="input-box" type="text" id="sellerName" name="sellerName" required>
                    <label for="sellerEmail">Email:</label>
                    <input class="input-box" type="email" id="sellerEmail" name="sellerEmail" value="<%= userEmail %>" readonly required>
                    <label for="sellerPhone">Phone Number:</label>
                    <input class="input-box" type="tel" id="sellerPhone" name="sellerPhone" required>
                </fieldset>
                <fieldset>
                    <legend>Photos</legend>
                    <label for="photos">Upload Photos:</label>
                    <input type="file" id="photos" name="photos" multiple required>
                </fieldset>
                <button type="submit">Submit</button>
            </form>
        </section>
    </main>

