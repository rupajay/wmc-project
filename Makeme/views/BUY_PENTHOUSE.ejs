    <script>
        function checkLogin(url) {
            fetch('/check-login')
                .then(response => response.json())
                .then(data => {
                    if (data.loggedIn) {
                        window.location.href = url;
                    } else {
                        alert('You need to log in first.');
                        window.location.href = '/';
                    }
                });
        }
    </script>

    <section class="sec-nav">
        <div class="profile">
            <form id="filterForm" action="/buy/penthouse" method="get">
            <div class="price-fil">
                <label for="price">Price:</label>
                <select id="price" name="price">
                    <option id="price1" value="">Select</option>
                    <option id="price2" value="0-1000000">0 - 1,000,000</option>
                    <option id="price3" value="1000001-5000000">1,000,001 - 5,000,000</option>
                    <option id="price4" value="5000001-10000000">5,000,001 - 10,000,000</option>
                    <option id="price5" value="10000001-20000000">10,000,001 - 20,000,000</option>
                    <option id="price6" value="20000001-50000000">20,000,001 - 50,000,000</option>
                </select>
            </div>
    
            <div class="bedrooms-fil">
                <label for="bed">Bedrooms:</label>
                <select id="bed" name="bed">
                    <option id="bedrooms1" value="">Select</option>
                    <option id="bedrooms2" value="1">1</option>
                    <option id="bedrooms3" value="2">2</option>
                    <option id="bedrooms4" value="3">3</option>
                    <option id="bedrooms5" value="4">4</option>
                    <option id="bedrooms6" value="5">5</option>
                    <option id="bedrooms7" value="6">6</option>
                    <option id="bedrooms8" value="7">7</option>
                    <option id="bedrooms9" value="8">8</option>
                    <option id="bedrooms10" value="9">9</option>
                    <option id="bedrooms11" value="10">10</option>
                </select>
            </div>
    
            <div class="sqft-fil">
                <label for="sqft">Sqft:</label>
                <select id="sqft" name="sqft">
                    <option id="sqft1" value="">Select</option>
                    <option id="sqft2" value="1000-2000">1,000 - 2,000</option>
                    <option id="sqft3" value="2001-3000">2,001 - 3,000</option>
                    <option id="sqft4" value="3001-4000">3,001 - 4,000</option>
                    <option id="sqft5" value="4001-5000">4,001 - 5,000</option>
                    <option id="sqft6" value="5001+">5,001+</option>
                </select>
            </div>
            
            <div class="location-fil">
                <label for="location">Location:</label>
                <select id="location" name="location">
                    <option id="location1" value="">Select</option>
                    <option id="location2" value="Downtown">Downtown</option>
                    <option id="location3" value="Suburbs">Suburbs</option>
                    <option id="location4" value="Waterfront">Waterfront</option>
                    <option id="location5" value="Mountain">Mountain</option>
                </select>
            </div>
            
            <button type="submit" id="filterButton">Filter</button>
        </form>
        </div>
    </section>
    

    <section class="properties properties1">
       
        <div class="property-list">
            <% penthouses.forEach((penthouse) => { %>
            <div class="property">
                
                    <div class="btnpic penthouse1">
                        <div class="status">
                            <p>BUY</p>
                        </div>
                            <a href="/penthouse/<%= penthouse.id %>" method="post" class="clickbtn">
                                <img class="penthouse1" src="<%= penthouse.photos %>" alt="">
                            </a>
                    </div>

                <div class="property-details">
                    <!-- <span class="status get">BUY</span> -->
                    <h4><%= penthouse.name %></h4>
                    <p><%= penthouse.location %></p>
                    <p class="moneycolor" >$ <%= penthouse.price %></p>
                    <div class="linespace"></div>
                    <div class="details">
                        <div class="bed">
                            <p class="icon"><i class="fa-solid fa-bed"></i></p>
                            <p>Beds:</p>
                            <p class="count"><%= penthouse.bed %></p>
                        </div>

                        <div class="baths">
                            <p class="icon"><i class="fa-solid fa-bath"></i></p>
                            <p>Baths:</p>
                            <p class="count"><%= penthouse.bathroom %></p>
                        </div>

                        <div class="levels">
                            <p class="icon"><i class="fa-solid fa-warehouse"></i></p>
                            <p>Levels:</p>
                            <p class="count"><%= penthouse.level %></p>
                        </div>

                        <div class="sqft">
                            <p class="icon"><i class="fa-solid fa-maximize"></i></p>
                            <p>Sqft:</p>
                            <p class="count"><%= penthouse.sqft %></p>
                        </div>
                    </div>
                    <div class="viewmore">
                        <a href="/penthouse/<%= penthouse.id %>" method="post" class="clickbtn viewbtn">View More</a>
                      </div>
                </div>
            </div>
            <% }) %>
        </div>
    </section>

    

