    <script>
        function checkLogin(url) {
            fetch('/check-login')
                .then(response => response.json())
                .then(data => {
                    if (data.loggedIn) {
                        window.location.href = url;
                    } else {
                        alert('You need to log in first.');
                        window.location.href = '/';
                    }
                });
        }
    </script>

    <section class="sec-nav">
        <div class="profile">
            <form id="filterForm" action="/buy/plan" method="get">

            <div class="price-fil">
                <label for="price">Price:</label>
                <select id="price" name="price">
                    <option id="price1" value="">Select</option>
                    <option id="price2" value="0-1000000">0 - 1,000,000</option>
                    <option id="price3" value="1000001-5000000">1,000,001 - 5,000,000</option>
                    <option id="price4" value="5000001-10000000">5,000,001 - 10,000,000</option>
                    <option id="price5" value="10000001-20000000">10,000,001 - 20,000,000</option>
                    <option id="price6" value="20000001-50000000">20,000,001 - 50,000,000</option>
                </select>
            </div>
    
            <div class="capacity-fil">
                <label for="capacity">Capacity:</label>
                <select id="capacity" name="capacity">
                    <option id="capacity1" value="">Select</option>
                    <option id="capacity2" value="1-4">1 - 4</option>
                    <option id="capacity3" value="5-10">5 - 10</option>
                    <option id="capacity4" value="11-20">11 - 20</option>
                    <option id="capacity5" value="21-50">21 - 50</option>
                    <option id="capacity6" value="51-100">51 - 100</option>
                    <option id="capacity7" value="101-150">101 - 150</option>
                    <option id="capacity8" value="151-200">151 - 200</option>
                    <option id="capacity9" value="201-300">201 - 300</option>
                </select>
            </div>
    
            <div class="year-fil">
                <label for="year">Year:</label>
                <select id="year" name="year">
                    <option id="year1" value="">Select</option>
                    <option id="year2" value="2018">2018</option>
                    <option id="year3" value="2019">2019</option>
                    <option id="year4" value="2020">2020</option>
                    <option id="year5" value="2021">2021</option>
                    <option id="year6" value="2022">2022</option>
                    <option id="year7" value="2023">2023</option>
                </select>
            </div>
            
            <div class="type-fil">
                <label for="type">Type:</label>
                <select id="type" name="type">
                    <option id="type1" value="">Select</option>
                    <option id="type2" value="private">Private</option>
                    <option id="type3" value="commercial">Commercial</option>
                    <option id="type4" value="cargo">Cargo</option>
                    <option id="type5" value="military">Military</option>
                </select>
            </div>
            
            <button type="submit" id="filterButton">Filter</button>
        </form>
        </div>
    </section>
    

    <section class="properties properties1">
        <div class="property-list">
            <% planes.forEach((plan) => { %>
            <div class="property">
                
                    <div class="btnpic plan1">
                        <div class="status">
                            <p>BUY</p>
                        </div>
                            <a href="/plan/<%= plan.id %>" method="post" class="clickbtn">
                                <img class="plan1" src="<%= plan.photos %>" alt="">
                            </a>
                    </div>

                <div class="property-details">
                    <!-- <span class="status get">BUY</span> -->
                    <h4> <%= plan.model %></h4>
                    <p> <%= plan.type %></p>
                    <p class="moneycolor" >$ <%= plan.price.toLocaleString() %> </p>
                    <div class="linespace"></div>
                    <div class="details">
                        <div class="bed">
                            <p class="icon"><i class="fa-solid fa-route"></i></p>
                            <p>Range:</p>
                            <p class="count"><%= plan.range  %></p>
                        </div>

                        <div class="baths">
                            <p class="icon"><i class="fa-solid fa-gauge-high"></i></p>
                            <p>Speed:</p>
                            <p class="count"><%= plan.speed %></p>
                        </div>

                        <div class="levels">
                            <p class="icon"><i class="fa-solid fa-chair"></i></p>
                            <p>Capacity:</p>
                            <p class="count"><%= plan.capacity %></p>
                        </div>

                        <div class="sqft">
                            <p class="icon"><i class="fa-regular fa-clock"></i></p>
                            <p>Year:</p>
                            <p class="count"><%= plan.year %></p>
                        </div>
                    </div>
                    <div class="viewmore">
                        <a href="/plan/<%= plan.id %>" method="post" class="clickbtn viewbtn">View More</a>
                      </div>
                </div>
            </div>
            <% }) %>
        </div>
    </section>

    <section class="contact-section">
        <div class="contact-info">
            <div class="contact-item">
                <i class="fas fa-phone"></i>
                <h3>Call Us</h3>
                <p>Free Calls</p>
                <p>1-800-700-900</p>
            </div>
            <div class="contact-item">
                <i class="fas fa-map-marker-alt"></i>
                <h3>Find Us</h3>
                <p>Ahmedabad University</p>
                <p>Ahmedabad, India</p>
            </div>
            <div class="contact-item">
                <i class="fas fa-envelope"></i>
                <h3>Email Us</h3>
                <p>Direct Email</p>
                <p>mysantos@gmail.com</p>
            </div>
        </div>
    </section>


    <script>
        document.getElementById('filterForm').addEventListener('submit', function(event) {
          event.preventDefault(); // Prevent the form from submitting the traditional way
        
          const price = document.getElementById('price').value;
          const capacity = document.getElementById('capacity').value;
          const year = document.getElementById('year').value;
          const type = document.getElementById('type').value;
        
          let query = '/buy/plan?';
          if (price) query += `price=${price}&`;
          if (capacity) query += `capacity=${capacity}&`;
          if (year) query += `year=${year}&`;
          if (type) query += `type=${type}&`;
        
          window.location.href = query.slice(0, -1); // Redirect to the URL with query parameters
        });
      </script>
      


